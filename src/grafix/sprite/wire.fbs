namespace grafix.sprite.wire;

table SpriteSheetDesc {
    name:       string (required);

    img_width:  ushort;
    img_height: ushort;
    origin_x:   ushort;
    origin_y:   ushort;
    spr_width:  ushort;
    spr_height: ushort;
    num_across: ushort;
    num_down:   ushort;
    total:      ushort;
    color_path: string (required);
    depth_path: string (required);
}
